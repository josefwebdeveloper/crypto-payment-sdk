{
  "name": "@cryptopay/sdk",
  "version": "1.0.0",
  "description": "Embeddable crypto payment widget SDK",
  "type": "module",
  "main": "dist/sdk.umd.js",
  "module": "dist/sdk.es.js",
  "types": "dist/types/sdk.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/sdk.d.ts",
      "import": "./dist/sdk.es.js",
      "require": "./dist/sdk.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "dev:widget": "vite --config vite.widget.config.ts",
    "build": "npm run build:sdk && npm run build:widget",
    "build:sdk": "vite build --config vite.sdk.config.ts",
    "build:widget": "vite build --config vite.widget.config.ts",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "lucide-react": "^0.555.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "terser": "^5.44.1",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vite-plugin-dts": "^4.0.0"
  },
  "keywords": [
    "crypto",
    "payment",
    "sdk",
    "widget",
    "usdt",
    "ethereum"
  ],
  "license": "MIT"
}
